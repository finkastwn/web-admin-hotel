<% include ../layouts/main-layout %>
<%
  const activePage = 'tamu';
%>
<% include ../layouts/navbar with { activePage: activePage } %>

<body style="background: lightgray">

    <div class="container mt-5">
        <div class="row">
            <div class="col-md-12">

                <% if (messages.success) { %>
                <div class="alert alert-success" role="alert" style="position: relative;">
                    <%- messages.success %>
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"
                        style="position: absolute; right: 0 ;top: 0; background: none; border: none;">
                        <span aria-hidden="true" style="font-size: 20px;">&times;</span>
                    </button>
                </div>
                <% } %>

                <% if (messages.error) { %>
                <div class="alert alert-danger" role="alert" style="position: relative;">
                    <%- messages.error %>
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"
                        style="position: absolute; right: 0 ;top: 0; background: none; border: none;">
                        <span aria-hidden="true" style="font-size: 20px;">&times;</span>
                    </button>
                </div>
                <% } %>

                <div class="card border-0 shadow rounded">
                    <div class="card-body">
                        <form action="/tamu/update/<%= id_tamu %>" method="post">
                            <div class="d-flex justify-content-between">
                                <a href="/tamu/detail/<%= id_tamu %>"
                                    class="btn btn-md btn-outline-primary mb-3">KEMBALI KE DETAIL TAMU</a>
                            </div>
                            <h3 style="text-align: center;">EDIT DETAIL TAMU</h3>
                            <br>
                            <table class="table table-bordered">
                                <tbody>
                                    <tr>
                                        <th>ID Tamu</th>
                                        <td><%= id_tamu%></td>
                                    </tr>
                                    <tr>
                                        <th>Nama Tamu</th>
                                        <td><input type=" text" class="form-control" name="nama_tamu"
                                                value="<%= nama_tamu%>"></td>
                                    </tr>
                                    <tr>
                                        <th>Jenis Identitas</th>
                                        <td>
                                            <select class="form-select" name="jenis_identitas" id="jenis_identitas">
                                                <option value="KTP"
                                                    <%= (jenis_identitas === 'KTP') ? 'selected' : '' %>>KTP
                                                </option>
                                                <option value="SIM"
                                                    <%= (jenis_identitas === 'SIM') ? 'selected' : '' %>>
                                                    SIM
                                                </option>
                                                <option value="KITAS"
                                                    <%= (jenis_identitas === 'KITAS') ? 'selected' : '' %>>
                                                    KITAS</option>
                                                <option value="PASSPORT"
                                                    <%= (jenis_identitas === 'PASSPORT') ? 'selected' : '' %>>
                                                    Passport</option>
                                            </select>
                                        </td>
                                    </tr>
                                    <tr>
                                        <th>Nomor Identitas</th>
                                        <td><input type="text" class="form-control" name="no_identitas"
                                                value="<%= no_identitas%>">
                                        </td>
                                    </tr>
                                    <tr>
                                        <th>Nomor Telepon</th>
                                        <td><input type="text" class="form-control" name="no_hp" value="<%= no_hp%>">
                                        </td>
                                    </tr>
                                    <tr>
                                        <th>Alamat</th>
                                        <td><textarea name="alamat" class="form-control"><%= alamat%></textarea></td>
                                    </tr>
                                </tbody>
                            </table>
                            <button type="submit" class="btn btn-primary">UPDATE</button>
                            <button type="reset" class="btn btn-warning">RESET</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    </script>

</body>

</html>