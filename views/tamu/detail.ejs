<% include ../layouts/main-layout %>
<%
  const activePage = 'tamu';
%>
<% include ../layouts/navbar with { activePage: activePage } %>

<body style="background: lightgray">

    <div class="container mt-5">
        <div class="row">
            <div class="col-md-12">

                <% if (messages.success) { %>
                <div class="alert alert-success" role="alert" style="position: relative;">
                    <%- messages.success %>
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"
                        style="position: absolute; right: 0 ;top: 0; background: none; border: none;">
                        <span aria-hidden="true" style="font-size: 20px;">&times;</span>
                    </button>
                </div>
                <% } %>

                <% if (messages.error) { %>
                <div class="alert alert-danger" role="alert" style="position: relative;">
                    <%- messages.error %>
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"
                        style="position: absolute; right: 0 ;top: 0; background: none; border: none;">
                        <span aria-hidden="true" style="font-size: 20px;">&times;</span>
                    </button>
                </div>
                <% } %>

                <div class="card border-0 shadow rounded">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <a href="/tamu" class="btn btn-md btn-outline-primary mb-3">KEMBALI KE LIST TAMU</a>
                        </div>


                        <h3 style="text-align: center;">DETAIL TAMU</h3>

                        <table class="table table-bordered">
                            <tbody>
                                <% if(data.length){%>
                                <tr>
                                    <th>ID Tamu</th>
                                    <td><%= data[0].id_tamu%></td>
                                </tr>
                                <tr>
                                    <th>Nama Tamu</th>
                                    <td><%= data[0].nama_tamu%></td>
                                </tr>
                                <tr>
                                    <th>Jenis Identitas</th>
                                    <td><%= data[0].jenis_identitas%></td>
                                </tr>
                                <tr>
                                    <th>Nomor Identitas</th>
                                    <td><%= data[0].no_identitas%></td>
                                </tr>
                                <tr>
                                    <th>Nomor Telepon</th>
                                    <td><%= data[0].no_hp%></td>
                                </tr>
                                <tr>
                                    <th>Alamat</th>
                                    <td><%= data[0].alamat%></td>
                                </tr>
                                <% } else{ %>
                                <tr>
                                    <td colspan="4">
                                        <div class="alert alert-danger" role="alert">
                                            Data Tidak Ditemukan !
                                        </div>
                                    </td>
                                </tr>
                                <% } %>
                            </tbody>
                        </table>
                        <a href="/tamu/edit/<%=data[0].id_tamu%>"
                            class="btn btn-md btn-outline-primary mb-3 ml-auto">EDIT</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    </script>

</body>

</html>