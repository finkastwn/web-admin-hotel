<% include ../layouts/main-layout %>
<%
  const activePage = 'check-in';
%>
<% include ../layouts/navbar with { activePage: activePage } %>

<body style="background: lightgray">

    <div class="container mt-5">
        <div class="row">
            <div class="col-md-12">
                <% if (messages.error) { %>
                <div class="alert alert-danger" role="alert" style="position: relative;">
                    <%- messages.error %>
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"
                        style="position: absolute; right: 0 ;top: 0; background: none; border: none;">
                        <span aria-hidden="true" style="font-size: 20px;">&times;</span>
                    </button>
                </div>
                <% } %>
                <div class="card border-0 shadow rounded">
                    <div class="card-body">
                        <h3 style="text-align: center;" class="font-weight-bold">Check-in</h3>
                        <form action="/penginapan/checked-in/<%= id_tamu %>" method="POST">
                            <div class="form-group">
                                <label>Nama Tamu</label>
                                <input type="text" class="form-control" name="nama_tamu" value="<%= nama_tamu %>"
                                    disabled>
                            </div>
                            <div class="form-group">
                                <label>Identitas</label>
                                <input type="text" class="form-control" name="no_identitas"
                                    value="<%= jenis_identitas + ' - ' + no_identitas %>" disabled>
                            </div>
                            <div class="form-group">
                                <label>Nomor Telepon</label>
                                <input type="text" class="form-control" name="no_hp" value="<%= no_hp %>" disabled>
                            </div>
                            <div class="form-group">
                                <label>Kamar</label>
                                <select class="form-select" name="id_kamar" id="id_kamar">
                                    <option value="">Pilih Kamar</option>
                                    <% for (var i = 0; i < kamar.length; i++) { %>
                                    <option value="<%= kamar[i].id_kamar %>">
                                        <%= kamar[i].tipe_kamar + " - " + kamar[i].id_kamar%>
                                    </option>
                                    <% } %>
                                </select>
                            </div>
                            <div class="form-group">
                                <label>Tanggal Check-in</label>
                                <input type="date" class="form-control" name="tanggal_checkin"
                                    value="<%= tanggal_checkin %>" min="<%= new Date().toISOString().split('T')[0] %>">
                            </div>
                            <div class="form-group">
                                <label>Tanggal Check-out</label>
                                <input type="date" class="form-control" name="tanggal_checkout"
                                    value="<%= tanggal_checkout %>" min="<%= new Date().toISOString().split('T')[0] %>">
                            </div>
                            <br>
                            <button type="submit" class="btn btn-primary">check-in</button>
                            <a href="/tamu" class="btn btn-secondary">batal</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
</body>

</html>