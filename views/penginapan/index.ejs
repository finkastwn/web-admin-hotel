<% include ../layouts/main-layout %>
<% include ../layouts/dropdown-hover %>

<body style="background: lightgray">

    <div class="container mt-5">
        <div class="row">
            <div class="col-md-12">

                <% if (messages.success) { %>
                <div class="alert alert-success" role="alert" style="position: relative;">
                    <%- messages.success %>
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"
                        style="position: absolute; right: 0 ;top: 0; background: none; border: none;">
                        <span aria-hidden="true" style="font-size: 20px;">&times;</span>
                    </button>
                </div>
                <% } %>

                <% if (messages.error) { %>
                <div class="alert alert-danger" role="alert" style="position: relative;">
                    <%- messages.error %>
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"
                        style="position: absolute; right: 0 ;top: 0; background: none; border: none;">
                        <span aria-hidden="true" style="font-size: 20px;">&times;</span>
                    </button>
                </div>
                <% } %>

                <div class="card border-0 shadow rounded">
                    <div class="card-body">
                        <div class="d-flex justify-content-between">
                            <a href="/dashboard" class="btn btn-md btn-outline-primary mb-3">KEMBALI KE DASHBOARD</a>
                        </div>

                        <table class="table table-bordered">
                            <thead>
                                <tr>
                                    <th style="text-align: center;" scope="col">NO.</th>
                                    <th scope="col">NOMOR KAMAR</th>
                                    <th scope="col">NAMA TAMU</th>
                                    <th scope="col">TANGGAL CHECK-IN</th>
                                    <th scope="col">TANGGAL CHECK-OUT</th>
                                    <th style="text-align: center;" scope="col">AKSI</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if(data.length){
                                    
                                    for(var i = 0; i< data.length; i++) {%>
                                <tr>
                                    <th scope="row" class="text-center"><%= (i+1) %></th>
                                    <td><%= data[i].id_kamar %></td>
                                    <td><%= data[i].nama_tamu %></td>
                                    <%
                                        const checkin = data[i].tanggal_checkin;
                                        const formatCheckin = checkin.toLocaleDateString('en-GB').replace(/\//g, '-');
                                        const checkout = data[i].tanggal_checkout;
                                        const formatCheckout = checkout.toLocaleDateString('en-GB').replace(/\//g, '-');
                                    %>
                                    <td><%= formatCheckin %></td>
                                    <td><%= formatCheckout %></td>
                                    <td class="text-center">
                                        <div class="dropdown">
                                            <button class="dropbtn btn btn-sm btn-outline-primary">Pesan
                                                Layanan</button>
                                            <div class="dropdown-content">
                                                <a href="/layanan/pesan-extra-bed/<%=data[i].id_penginapan%>">Extra
                                                    Bed</a>
                                                <a href="#">Link 2</a>
                                                <a href="#">Link 3</a>
                                            </div>
                                        </div>
                                        <a href="#" onclick="confirmDelete('<%=data[i].id_penginapan%>')"
                                            class="btn btn-sm btn-outline-danger">check-out</a>
                                    </td>
                                </tr>
                                <% }
                                    
                                }else{ %>
                                <tr>
                                    <td colspan="6">
                                        <div class="alert alert-danger" role="alert">
                                            Data Tidak Ditemukan !
                                        </div>
                                    </td>
                                </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <script>
        function confirmDelete(id_penginapan) {
            if (confirm('Apakah Anda yakin pengunjung ini akan check-out?')) {
                window.location.href = '/penginapan/check-out/' + id_penginapan;
            }
        }
    </script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    </script>

</body>

</html>